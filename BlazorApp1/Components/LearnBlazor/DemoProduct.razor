@page "/learnBlazor/demoProduct"
@using BlazorApp1.Models

<h2 class="text-primary">DemoProduct</h2>
<p>Favorite Count: @FavoriteCount</p>
<div class="p-2 mt-2">
    <div class="row">
        @foreach (var prod in ProductList)
        {
            <_IndividualProduct Product="prod" OnFavoriteUpdate="FavoriteCountChange"></_IndividualProduct>
        }
    </div>
</div>

@code {
    public int FavoriteCount { get; set; } = 0;
    public int Count { get; set; } = 0;
    private string selectedProp = "";

    List<Product> ProductList = new();

    protected override void OnInitialized()
    {
        ProductList.Add(new()
        {
            Id = 1,
            Name = "Midnight Blaze",
            Price = 15,
            IsActive = false,
            ProductProperties = new List<Product_Prop>()
            {
                new Product_Prop { Id = 1, Key = "Flavor", Value = "Rose" },
                new Product_Prop { Id = 2, Key = "Size", Value = "20oz" },
                new Product_Prop { Id = 3, Key = "Color", Value = "Purple" }
            }
        });

        ProductList.Add(new()
        {
            Id = 2,
            Name = "Blossom Lily",
            Price = 20.99,
            IsActive = true,
            ProductProperties = new List<Product_Prop>()
            {
                new Product_Prop { Id = 1, Key = "Flavor", Value = "Lily" },
                new Product_Prop { Id = 2, Key = "Size", Value = "18oz" },
                new Product_Prop { Id = 3, Key = "Color", Value = "White" }
            }
        });
    }

    private void IncrementCount(int i)
    {
        Count+= i;
    }

    protected void FavoriteCountChange(bool isSelected)
    {
        if (isSelected)
        {
            FavoriteCount++;
        }
        else
        {
            FavoriteCount--;
        }
    }
}